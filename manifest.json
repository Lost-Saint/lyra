{
  "manifest_version": 2,
  "name": "Lyra",
  "author": "Lost Saint",
  "version": "1.0.0",
  "description": "Lets you fix annoying sound problems in YouTube videos and such. Like audio in one channel only, too quiet or too loud",
  "browser_specific_settings": {
    "gecko": {
      "id": "lyra@example.com"
    }
  },
  "icons": {
    "96": "assets/icons/icon.svg",
    "48": "assets/icons/icon.svg"
  },
  "permissions": ["activeTab", "webNavigation", "storage"],
  "browser_action": {
    "default_icon": "assets/icons/icon.svg",
    "default_title": "Lyra",
    "default_popup": "src/popup.html",
    "theme_icons": [
      {
        "dark": "assets/icons/icon.svg",
        "light": "assets/icons/icon-inv.svg",
        "size": 64
      },
      {
        "dark": "assets/icons/icon.svg",
        "light": "assets/icons/icon-inv.svg",
        "size": 48
      },
      {
        "dark": "assets/icons/icon.svg",
        "light": "assets/icons/icon-inv.svg",
        "size": 32
      },
      {
        "dark": "assets/icons/icon.svg",
        "light": "assets/icons/icon-inv.svg",
        "size": 16
      }
    ],
    "browser_style": true
  }
}
